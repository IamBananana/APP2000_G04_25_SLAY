{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // Kompilerte filer vil ende opp i dist-mappen
    "rootDir": "./src",  // Kildefiler er i src-mappen
    "strict": true
  },
  "include": ["src/**/*.ts"],  // Inkluder alle .ts-filer i src-mappen
  "exclude": ["node_modules"]  // Ekskluder node_modules-mappen
}
